# SharePoint Integration Environment Variables
# Copy this file to .env.local and fill in your values

# Azure AD App Registration credentials
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# SharePoint Configuration
# The full URL to your SharePoint site (e.g., https://yourorg.sharepoint.com/sites/YourSite)
SHAREPOINT_SITE_URL=https://yourorg.sharepoint.com/sites/YourSite

# Path to the Excel file within the SharePoint site
# (e.g., Shared Documents/Waivers/waiver_data.xlsx)
SHAREPOINT_EXCEL_FILE_PATH=Shared Documents/Waivers/waiver_data.xlsx

# Name of the Excel table to append data to
# (The table should have columns: Name, Date, Language, Timestamp, Screenshot_File)
SHAREPOINT_TABLE_NAME=WaiverData
